@model GlobalCosts

@{
    ViewData["Title"] = "GlobalCosts";
}

<h1>Prices and Fees</h1>

<form method="post" asp-action="UpdateGlobalCosts">
	<table class="table">
		<thead>
			<tr>
				<th>
					Bar #
				</th>
				<th>
					Bar Cost
				</th>
				<th>
					Bend Cost
				</th>
				<th>
					Cut Cost
				</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th>
					#3
				</th>
				<th>
					<input asp-for="Bar3GlobalCost" value=@Model.Bar3GlobalCost.Price class="form-control" />
					<label asp-for="Bar3GlobalCost" class="control-label">Edited: @Model.Bar3GlobalCost.LastChanged</label>
				</th>
				<th>
					<input asp-for="Bar3BendCost" value=@Model.Bar3BendCost.Price class="form-control" />
					<label asp-for="Bar3BendCost" class="control-label">Edited: @Model.Bar3BendCost.LastChanged</label>

				</th>
				<th>
					<input asp-for="Bar3CutCost" value=@Model.Bar3CutCost.Price class="form-control" />
					<label asp-for="Bar3CutCost" class="control-label">Edited: @Model.Bar3CutCost.LastChanged</label>
				</th>
			</tr>
			<tr>
				<th>
					#4
				</th>
				<th>
					<input asp-for="Bar4GlobalCost" value=@Model.Bar4GlobalCost.Price class="form-control" />
