	<table class="table">
		<thead>
			<tr>
				<th>
					Setup Charge
				</th>
				<th>
					
				</th>
			</tr>
		</thead>
		<tbody>
			<tr>
                <th>
                    <input type="hidden" name="setupGlobalID" value="@Model.SetupCharge.CostID" />
