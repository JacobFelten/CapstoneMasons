                    <label asp-for="Bar4GlobalCost" class="control-label">Edited: @Model.Bar4GlobalCost.LastChanged</label>
                </th>
                <th>
                    <input type="hidden" name="bend4GlobalID" value="@Model.Bar4BendCost.CostID" />
