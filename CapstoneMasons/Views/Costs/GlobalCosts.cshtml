				</th>
				<th>
					<input asp-for="Bar4BendCost" value=@Model.Bar4BendCost.Price class="form-control" />
					<label asp-for="Bar4BendCost" class="control-label">Edited: @Model.Bar4BendCost.LastChanged</label>
				</th>
				<th>
					<input asp-for="Bar4CutCost" value=@Model.Bar4CutCost.Price class="form-control" />
					<label asp-for="Bar4CutCost" class="control-label">Edited: @Model.Bar4CutCost.LastChanged</label>
				</th>
			</tr>
			<tr>
				<th>
					#5
				</th>
				<th>
					<input asp-for="Bar5GlobalCost" value=@Model.Bar5GlobalCost.Price class="form-control" />
					<label asp-for="Bar5GlobalCost" class="control-label">Edited: @Model.Bar5GlobalCost.LastChanged</label>
				</th>
				<th>
					<input asp-for="Bar5BendCost" value=@Model.Bar5BendCost.Price class="form-control" />
					<label asp-for="Bar5BendCost" class="control-label">Edited: @Model.Bar5BendCost.LastChanged</label>
				</th>
				<th>
					<input asp-for="Bar5CutCost" value=@Model.Bar5CutCost.Price class="form-control" />
					<label asp-for="Bar5CutCost" class="control-label">Edited: @Model.Bar5CutCost.LastChanged</label>
				</th>
			</tr>
			<tr>
				<th>
					#6
				</th>
				<th>
					<input asp-for="Bar6GlobalCost" value=@Model.Bar6GlobalCost.Price class="form-control" />
					<label asp-for="Bar6GlobalCost" class="control-label">Edited: @Model.Bar6GlobalCost.LastChanged</label>
				</th>
				<th>
					<input asp-for="Bar6BendCost" value=@Model.Bar6BendCost.Price class="form-control" />
					<label asp-for="Bar6BendCost" class="control-label">Edited: @Model.Bar6BendCost.LastChanged</label>
				</th>
				<th>
					<input asp-for="Bar6CutCost" value=@Model.Bar6CutCost.Price class="form-control" />
