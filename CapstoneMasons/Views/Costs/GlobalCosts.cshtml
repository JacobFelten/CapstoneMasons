                    <label asp-for="Bar4BendCost" class="control-label">Edited: @Model.Bar4BendCost.LastChanged</label>
                </th>
                <th>
                    <input type="hidden" name="cut4GlobalID" value="@Model.Bar4CutCost.CostID" />
                    <input name="bar4CutCost" value=@Model.Bar4CutCost.Price class="form-control" />
                    <label asp-for="Bar4CutCost" class="control-label">Edited: @Model.Bar4CutCost.LastChanged</label>
                </th>
			</tr>
			<tr>
				<th>
					#5
				</th>
                <th>
                    <input type="hidden" name="bar5GlobalID" value="@Model.Bar5GlobalCost.CostID" />
                    <input name="bar5GlobalCost" value=@Model.Bar5GlobalCost.Price class="form-control" />
